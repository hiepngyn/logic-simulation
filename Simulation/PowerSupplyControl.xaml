<UserControl x:Class="Simulation.PowerSupplyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simulation"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <Canvas>
        <Ellipse Name="InputValue" Width="50" Height="50"
                 Fill="{Binding CurrentValue}"
                 HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <TextBlock Canvas.Left="5" Canvas.Top="17" HorizontalAlignment="Left" VerticalAlignment="Center">POWER</TextBlock>
    </Canvas>
</UserControl>